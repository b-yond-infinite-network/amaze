{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "standard",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:mocha/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "chai-friendly",
      "mocha"
    ],
    "rules": {
      "mocha/no-hooks-for-single-case": [
        "error",
        {
          "allow": [
            "before",
            "after"
          ]
        }
      ],
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2,
      "prettier/prettier": "error",
      "semi": [1, "always"]
    }
  }
